<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-12 ">
            <form action="/add" method="post" id="add_form" enctype="multipart/form-data">

                <h2 class="text-center my-3">Add New User</h2>

                <div class="mb-2">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" name="name" class="form-control" id="exampleInputPassword1" required>
                  </div>

                <div class="mb-3">
                  <label for="email" class="form-label">Email address</label>
                  <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
                  <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="tel" name="phone" class="form-control" id="exampleInputPassword1" required>
                  </div>

                  <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="exampleInputPassword1" required>
                  </div>

                  <div class="mb-4 ">
                    <label for="image" class="form-label">Select image</label>
                    <input type="file" name="image" class="form-control" id="exampleInputPassword1" required>
                  </div>

                  <div class="mb-5 ">
                    <label for="admin" class="">Admin Level</label>
                    <input type="radio" name="level" class="" id="admin" required value="admin">
                    <label for="user" class="">User Level</label>
                    <input type="radio" name="level" class="" id="user" required value="user">
                  </div>

                <button type="submit" name="submit" class="btn btn-dark">Add User</button>

              </form>
        </div>
    </div>
</div>

<%- include('layout/footer') %>