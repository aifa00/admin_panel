<%- include('layout/header') %>

<div class="container">
    <div class="row my-5">
        <div class="col-lg-12">

            <% if (message) { %>
                <div class="alert py-2 alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" style="font-size: 10px;" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %> 


            <div class="table-responsive">

                <% if (users !='') { %>

                    <table class="table " >
                        <thead>
                            <tr class="table-primary">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>E-Mail</th>
                                <th>Phone</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row,index) => { %>
                                <tr class="align-middle">
                                    <td><%= index+1 %></td>
                                    <td><img src="<%= row.image %>" width="50" class="img-thumbnail" alt="profile"></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-primary ms-1"><i class="fa-regular fa-pen-to-square"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger ms-5"><i class="fa-solid fa-trash"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                 
                <% }else{ %>
                    <h1 class="text-center text-secondary mt-5">No user found in the database</h1>
                <% } %>
                
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>